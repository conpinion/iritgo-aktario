<panel layout="GridBagLayout">

	<gridbagconstraints id="std"
		insets="2,2,2,2" ipadx="0" ipady="0"
		gridx="0" gridy="0" gridheight="1" gridwidth="1"
		weightx="0.0" weighty="0.0"
		anchor="GridBagConstraints.WEST"
		fill="GridBagConstraints.NONE"/>

	<scrollpane>
		<gridbagconstraints use="std" gridx="0" gridy="0" weightx="1.0" weighty="1.0" fill="GridBagConstraints.BOTH"/>
		<table id="userTable"/>
	</scrollpane>

	<panel layout="GridBagLayout">
		<gridbagconstraints use="std" gridx="1" gridy="0" gridheight="3" weighty="1.0" fill="GridBagConstraints.VERTICAL" insets="0,2,0,2"/>

		<ibutton action="addUserAction" text="aktario.new" icon="resources/new.png">
			<gridbagconstraints use="std" gridx="0" gridy="0" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
		</ibutton>

		<ibutton id="btnEdit" action="editUserAction" text="aktario.edit" icon="resources/edit.png" enabled="false">
			<gridbagconstraints use="std" gridx="0" gridy="1" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
		</ibutton>

		<ibutton id="btnDelete" action="deleteUserAction" text="aktario.delete" icon="resources/delete.png" enabled="false">
			<gridbagconstraints use="std" gridx="0" gridy="2" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
		</ibutton>

		<label>
			<gridbagconstraints use="std" gridx="0" gridy="3" weightx="1.0" weighty="1.0" fill="GridBagConstraints.BOTH"/>
		</label>

		<ibutton action="okAction" text="aktario.close" icon="resources/ok.png">
			<gridbagconstraints use="std" gridx="0" gridy="4" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
		</ibutton>

	</panel>

</panel>
